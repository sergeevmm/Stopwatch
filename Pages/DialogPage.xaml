<Page x:Class="Stopwatch.Pages.DialogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stopwatch.Pages"
      mc:Ignorable="d"
      Title="DialogPage" MinHeight="130" MinWidth="370" >

    <Grid Margin="10 10 10 10" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Name="labelDefinition" VerticalAlignment="center" Visibility="Visible" 
               HorizontalAlignment="Left" Style="{StaticResource MaterialDesignLabel}" 
               FontSize="17" Content="Описание вопроса" />

        <Button Name ="ButtonYes" Grid.Row="1" HorizontalAlignment="Right" Grid.Column="0" Width="80" Margin="0 0 10 0" Content="Да" ></Button>
        <Button Name ="ButtonNo" Grid.Row="1" HorizontalAlignment="Right" Grid.Column="1" Width="80" Margin="10 0 0 0" Content="Нет"></Button>
    </Grid>
</Page>
